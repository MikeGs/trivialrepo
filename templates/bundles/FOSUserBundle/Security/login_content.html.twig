{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div> 
<div class="container-fluid d-flex justify-content-center">

<div class="formulario-login">

<div class="formheader">
    <h2>Iniciar sessi√≥</h2>
</div>

<form action="{{ path("fos_user_security_check") }}" method="post" class="d-flex justify-content-center">

    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

<div class="row">

	<div class="col-lg-12">
    <label class="label_p" for="username">{{ 'security.login.username'|trans }}</label>
    </div>
    
    <div class="col-lg-12">
    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>

    <div class="col-lg-12">
    <label class="label_p" for="password">{{ 'security.login.password'|trans }}</label>
    </div>

    <div class="col-lg-12">
    <input type="password" class="form-control" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>

    
    <div class="col-lg-12" id="rememberDiv">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label class="remember" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <div class="col col-lg-12 buttonLoginRegisterDiv">
        <input class="btn btn-primary buttonLoginRegister" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
     </div>
</div>
</form>
</div>
            
        </div>
    </div>
</div>
</div>