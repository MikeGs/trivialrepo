{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<h1>Llistat de grups</h1>

<div class="grups">

<a href='{{path('afegirgrup')}}' class="">Afegir grup</a>

{% for grup in grups %}

    <div class="grup">
        <p>Grup: {{ grup.nom }}</p>
        <p>Nivell: 
        
        {% for nivell in nivells %}

            {% if nivell.id == grup.idNivell.id %}
                {{ nivell.nom }}
            {% endif %}

            {% else %}
                No té categoria.
        {% endfor %}
        
        </p>
        <p>Administrador: 
        
        {% for administrador in administradors %}

            {% if administrador.id == grup.idAdministrador %}
                {{ administrador.nom }}
            {% endif %}

            {% else %}
                No té categoria.
        {% endfor %}</p>
    </div>


{% endfor %}

</div>

{% endblock %}
